<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#dc071932">


    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:background="@drawable/editstyle"
        android:hint = "                   Enter Meeting Name"




        android:shadowColor="#ffa0faff"
        android:singleLine="true"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/editText2"
        android:layout_marginTop="21dp"
        android:hint ="                   Enter Meeting Place"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:background="@drawable/editstyle"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/editText4"
        android:hint="                            Enter Date"
        android:inputType="date"
        android:singleLine="true"
        android:background="@drawable/editstyle"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/editText5"
        android:layout_marginTop="25dp"
        android:hint="                         Enter Theme"

        android:singleLine="true"
        android:background="@drawable/editstyle"


        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:id="@+id/button"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:drawableLeft="@drawable/friendfin1"
        android:paddingLeft="20dp"
        android:paddingRight="0dp"

        android:background="@drawable/buttonstyle"

        />

</RelativeLayout>
